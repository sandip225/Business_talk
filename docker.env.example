# Docker Environment Configuration for Business Talk
# Copy this file to .env and update with your actual values

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password
MONGODB_URI=mongodb://admin:your-secure-mongodb-password@mongodb:27017/business-talk?authSource=admin

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Backend Configuration
PORT=5000
NODE_ENV=production

# Frontend API URL (for build time)
VITE_API_URL=http://your-ec2-domain-or-ip/api

